package com.sba.SMS;


import org.junit.jupiter.api.Assertions;
import org.junit.jupiter.api.Test;

import jpa.dao.StudentService;

class validateStudentTest {

	@Test
	void studentValidationTest() {
		
		StudentService ss = new StudentService();
		
		// should be valid
		boolean[] rets = ss.validateStudent("aiannitti7@is.gd", "TWP4hf5j");
		Assertions.assertEquals(rets[0], true);
		Assertions.assertEquals(rets[1], true);
		
//		Assertions.assertTrue(ss.validateStudent("aiannitti7@is.gd", "TWP4hf5j"));
//		Assertions.assertTrue(ss.validateStudent("test@test.com", "test"));
		
		// should NOT be valid
		boolean[] retsFalse = ss.validateStudent("aiannitti7@is.gd", "password");
		Assertions.assertEquals(retsFalse[0], true);
		Assertions.assertEquals(retsFalse[1], true);
//		Assertions.assertFalse(ss.validateStudent("aiannitti7@is.gd", "password"));
//		Assertions.assertFalse(ss.validateStudent("test@test.com", "password"));
	}

}
